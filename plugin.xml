<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.webratio.cordova.plugin.datepicker"
      version="1.1.3.2">

    <name>Datepicker</name>
    <description>Cordova Datepicker Plugin for iOS and Android</description>
    <license>MIT</license>
    <keywords>cordova,datepicker,ios,ios7,ios8,android</keywords>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="DatePickerPlugin">
                <param name="android-package" value="com.sharinglabs.cordova.plugin.datepicker.DatePickerPlugin"/>
            </feature>
        </config-file>
        
        <js-module src="www/android/DatePicker.js" name="DatePicker">
            <clobbers target="datePicker" />
        </js-module>

        <source-file src="src/android/DatePickerPlugin.java" target-dir="src/com/sharinglabs/cordova/plugin/datepicker" />
    </platform>
    
    <!-- ios -->
    <platform name="ios">

        <config-file target="config.xml" parent="/*">
        <feature name="DatePicker">
            <param name="ios-package" value="DatePicker"/>
        </feature>
        </config-file>

        <js-module src="www/ios/DatePicker.js" name="DatePicker">
            <clobbers target="datePicker" />
        </js-module>

        <header-file src="src/ios/DatePicker.h" />
        <source-file src="src/ios/DatePicker.m" />
	    <resource-file src="src/ios/DatePicker.xib" />
    </platform>
    
    
    <!-- wp8 -->
    <platform name="wp8">
        <config-file target="config.xml" parent="/*">
            <feature name="DateTimePicker">
                <param name="wp-package" value="DateTimePicker"/>
            </feature>
        </config-file>
        
        <js-module src="www/wp8/datetimepicker.js" name="datetimepicker">
            <clobbers target="datePicker" />
        </js-module>

        <source-file src="src/wp8/DateTimePicker.cs"/>
        <source-file src="src/wp8/DateTimePickerTask.cs"/>
        
        <!-- WPToolkit -->
		<framework src="src/wp8/lib/wptoolkit/lib" custom="true" />
		<framework src="plugins/com.webratio.cordova.plugin.datepicker/lib/Microsoft.Phone.Controls.Toolkit.dll" />
		<source-file src="src/wp8/lib/wptoolkit/content/Toolkit.Content/ApplicationBar.Add.png" target-dir="../../Toolkit.Content" />
		<source-file src="src/wp8/lib/wptoolkit/content/Toolkit.Content/ApplicationBar.Cancel.png" target-dir="../../Toolkit.Content" />
		<source-file src="src/wp8/lib/wptoolkit/content/Toolkit.Content/ApplicationBar.Check.png" target-dir="../../Toolkit.Content" />
		<source-file src="src/wp8/lib/wptoolkit/content/Toolkit.Content/ApplicationBar.Delete.png" target-dir="../../Toolkit.Content" />
		<source-file src="src/wp8/lib/wptoolkit/content/Toolkit.Content/ApplicationBar.Select.png" target-dir="../../Toolkit.Content" />
    </platform>

</plugin>
